{
    "compilerOptions": {
        "outDir": "src/js",
        "module": "es2022",
        "target": "es2017",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "removeComments": true,
        "strictNullChecks": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@axios/*": ["node_modules/axios/*"]
        }
        // "sourceMap": true
    },
    "include": ["src/**/*"]
}
